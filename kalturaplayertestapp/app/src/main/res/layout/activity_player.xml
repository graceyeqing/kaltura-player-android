<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:keepScreenOn="true">


        <LinearLayout
            android:id="@+id/player_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical"
            />

        <com.kaltura.tvplayer.PlaybackControlsView
            android:id="@+id/player_controls"
            android:layout_marginBottom="8dp"
            android:layout_alignBottom="@+id/player_container_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.kaltura.tvplayer.PlaybackControlsView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/logScroll"
        android:background="#DDDDDD"
        android:padding="5dp"
        android:tooltipText="Events"
        android:layout_below="@+id/player_container">

        <TextView
        android:id="@+id/logText"
        android:text="Event Test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </TextView>
    </ScrollView>

</RelativeLayout>